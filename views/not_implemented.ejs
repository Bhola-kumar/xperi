<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/not_implemented.css">
    <title>Feature Not Implemented</title>
</head>
<body>
    <div id="content" class="vh-100 d-none">
        <div class="container h-100">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 text-center">
                    <div class="chart-container">
                        <div id="constructionChart"></div>
                    </div>
                    <h1 class="mb-4">Feature Under Construction</h1>
                    <p class="lead mb-4">This feature is currently being developed and will be available soon.</p>
                    <div id="countdown" class="countdown mb-4"></div>
                    <button onclick="history.back()" class="btn btn-primary btn-lg">Go Back</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script type="module">
        import { authorizeUser } from '/js/auth.js';
        
        async function init() {
            const email = await authorizeUser();
            if (email) {
                document.getElementById('content').classList.replace('d-none', 'd-block');
            }
        }
        
        init();
    </script>
    <script src="/js/not_implemented.js"></script>
</body>
</html>
